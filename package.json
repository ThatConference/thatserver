{
  "name": "that-server",
  "version": "0.0.1",
  "description": "That Conference Backend Server",
  "license": "Apache-2.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatConference/thatserver.git"
  },
  "scripts": {
    "start": "node ./index",
    "start:watch": "nodemon ./src/index.js --exec babel-node",
    "build": "babel ./src -d ./build",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "lint": "eslint -c ./.eslintrc.json ./src",
    "validate": "npm-run-all --parallel test lint build",
    "precommit": "npm run validate",
    "deploy": "now ./build -e NODE_ENV=production --token $NOW_TOKEN --npm",
    "alias": "now alias --token=$NOW_TOKEN",
    "now-start": "node ./index"
  },
  "contributors": [
    {
      "name": "Clark Sell",
      "email": "hello@unspecified.io",
      "url": "http://unspecified.io/"
    }
  ],
  "engines": {
    "node": "^8.9"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../coverage"
  },
  "now": {
    "name": "that-server",
    "alias": "that-server-demo",
    "env": {
      "SUBSCRIPTIONS_HOST": "wss://that-server-demo.now.sh",
      "PORT": "443"
    },
    "scale": {
      "sfo1": {
        "min": 1,
        "max": "auto"
      }
    }
  },
  "dependencies": {
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.0.1",
    "graphql-voyager": "^1.0.0-rc.15",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "mongoose": "^5.1.0",
    "subscriptions-transport-ws": "^0.9.9",
    "winston": "^2.4.2"
  },
  "optionalDependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.1",
    "husky": "^0.14.3",
    "jest-cli": "^22.4.3",
    "nodemon": "^1.17.4",
    "now": "^11.1.7",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.12.1"
  }
}
