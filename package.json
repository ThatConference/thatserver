{
  "name": "that-server",
  "version": "0.2.0",
  "description": "That Conference Backend Server",
  "license": "Apache-2.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatConference/thatserver.git"
  },
  "scripts": {
    "start": "node ./build/index",
    "start:watch": "nodemon ./src/index.js --exec babel-node",
    "gcp-build": "npm run build",
    "build": "babel ./src -d ./build --source-maps --ignore __test__",
    "postbuild": "",
    "after:build:set:public": "",
    "prebuild": "rm -rf ./build ",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint -c ./.eslintrc.json ./src",
    "validate": "npm-run-all --parallel test lint build",
    "precommit": "npm run validate",
    "deploy": "now --token $NOW_TOKEN --npm",
    "alias": "now alias --token=$NOW_TOKEN",
    "now-start": "node ./build/index"
  },
  "contributors": [
    {
      "name": "Clark Sell",
      "email": "hello@unspecified.io",
      "url": "http://unspecified.io/"
    }
  ],
  "engines": {
    "node": "10.x"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../coverage"
  },
  "dependencies": {
    "agenda": "^2.1.0",
    "apollo-server-express": "^1.4.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.6.12",
    "firebase-admin": "^5.13.1",
    "graphql": "^0.13.2",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.1.1",
    "graphql-voyager": "^1.0.0-rc.28",
    "lodash": "^4.17.19",
    "moment": "^2.24.0",
    "mongoose": "^5.7.8",
    "node-cache": "^4.2.1",
    "request-promise": "^4.2.5",
    "subscriptions-transport-ws": "^0.9.16",
    "twilio": "^3.37.1",
    "winston": "^2.4.4"
  },
  "optionalDependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^0.14.3",
    "jest-cli": "^24.9.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}
