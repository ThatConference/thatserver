  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../coverage"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.4",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.24.0",
    "graphql-voyager": "^1.0.0-rc.15",
    "lodash": "^4.17.5",
    "moment": "^2.22.0",
    "mongoose": "^5.0.14",
